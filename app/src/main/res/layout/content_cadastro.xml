<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="projetoum.equipe.iteach.activities.CadastroActivity"
    tools:showIn="@layout/app_bar_cadastro">


    <TextView
        android:id="@+id/st_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/nome"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edt_nome"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/st_nome"
        android:background="@drawable/border"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:maxLength="70"
        android:textColor="@color/cardview_light_background" />

    <TextView
        android:id="@+id/st_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_nome"
        android:layout_marginTop="5dp"
        android:text="@string/local"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edt_local"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/st_local"
        android:background="@drawable/border"
        android:padding="10dp"
        android:maxLength="70"
        android:textColor="@color/cardview_light_background" />

    <TextView
        android:id="@+id/st_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_local"
        android:layout_marginTop="5dp"
        android:text="@string/telefone"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edt_telefone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/st_telefone"
        android:background="@drawable/border"
        android:inputType="phone"
        android:padding="10dp"
        android:maxLength="20"
        android:textColor="@color/cardview_light_background" />

    <TextView
        android:id="@+id/st_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_telefone"
        android:layout_marginTop="5dp"
        android:text="@string/bio"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edt_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/st_bio"
        android:background="@drawable/border"
        android:lines="7"
        android:gravity="top|left"
        android:padding="10dp"
        android:maxLength="240"
        android:textColor="@color/cardview_light_background" />

    <Button
        android:id="@+id/bt_salvar_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/border"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/txt_botao_perfil"
        android:textColor="@color/cardview_light_background" />


</RelativeLayout>

